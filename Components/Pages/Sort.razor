@page "/sort"
@rendermode InteractiveServer
@attribute [StreamRendering]
@inject IJSRuntime JSRuntime
<PageTitle>Sort Customer</PageTitle>


<h1>Customer Information System </h1>
<h3> Sort Customer Data </h3>
<button class="btn btn-danger shadow-lg" @onclick="ReloadData">Reload Data </button>
<button class="btn btn-outline-primary ms-1" @onclick="UpdateCsvFile">Save To File</button>
<select class="btn btn-outline-primary shadow-lg" @onchange="OnSortAttributeSelected">
    <option value="">-- Select an Attribute --</option>
    @foreach (var str in ValidSort)
    {
        <option value="@str"> @str </option>
    }
</select>
<div>
    Select for Descending Order
    <InputCheckbox @bind-value="@IsDesc" />
</div>

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name </th>
                <th>Customer City </th>
                <th>Customer Country </th>
                <th>Customer Company </th>
                <th>Customer Phone </th>
                <th>Customer Email </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.ID </td>
                    <td>@customer.Name </td>
                    <td>@customer.City </td>
                    <td>@customer.Country </td>
                    <td>@customer.Company </td>
                    <td>@customer.Phone </td>
                    <td>@customer.Email </td>
                </tr>
            }
        </tbody>
    </table>
}
